			img(src="./img/assets1.jpg", width="40" alt="img")
		.assets-card_info
			.assets-card__header.d-flex
				.assets-card_col
					h4.text-16 GAME SLOT #32489
					p.text-12 Axie Infinity
				.assets-card_col
					p.text-10 Баланс
					p.text-16 7 000 ₽
					p.text-12 709 SLP
			.assets-card__body
				.referral-block__info
					p.text-small Стоимость активов
					.assets-info.d-flex
