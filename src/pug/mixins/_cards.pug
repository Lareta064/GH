mixin statistic-card(summ, desk, addClass)
	a.statistic-card( href="#!")
		span.title-3(class=""+addClass) #{summ} ₽
		span.text-14 #{desk}
		span.text-link Подробнее

mixin myAssets
	a(href="one-assets-card.html").assets-card.assets-card--big
